<?xml version="1.0"?>
<page layout="checkout" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
	<head>
		<css src="Billmate_BillmateCheckout/css/checkout.css"/>
	</head> 
	<body>
		<referenceContainer name="page.main.title" remove="true" />

		<referenceContainer name="page.wrapper">
			<container name="bm-cart" htmlTag="div" htmlClass="bm-cart-wrapper" after="main"/>
			<container name="bm.checkout.page" htmlTag="div" htmlClass="bm-checkout-wrapper">
				<container name="bm.checkout.side.block"
						   htmlTag="div" htmlId="billmate-cart"
						   htmlClass="bm-checkout-side-wrapper">
					<block class="Billmate\BillmateCheckout\Block\Checkout\Items"
						   cacheable="false" name="billmate.cart.items"
						   template="bmcheckout/items.phtml">
						<block class="Magento\Bundle\Block\Checkout\Cart\Item\Renderer" name="bm.item.renderer"/>
					</block>
					<block class="Billmate\BillmateCheckout\Block\Checkout\Shipping"
						   cacheable="false" name="billmate.cart.shipping"
						   template="bmcheckout/shipping.phtml"/>
					<block class="Billmate\BillmateCheckout\Block\Checkout\Totals"
						   cacheable="false" name="billmate.cart.totals"
						   template="bmcheckout/totals.phtml"/>
					<block class="Billmate\BillmateCheckout\Block\Checkout\Coupon"
						   cacheable="false" name="billmate.cart.coupon"
						   template="bmcheckout/coupon.phtml"/>
					<block class="Billmate\BillmateCheckout\Block\Checkout\Comment"
						   cacheable="false" name="billmate.cart.comment"
						   template="bmcheckout/comment.phtml"/>
					<block class="Billmate\BillmateCheckout\Block\Checkout\Subscription"
						   cacheable="false" name="billmate.cart.subscription"
						   template="bmcheckout/subscription.phtml"/>
					<block class="Billmate\BillmateCheckout\Block\Checkout"
						   cacheable="false" name="billmate.cart.js.actions"
						   template="bmcheckout/js-init.phtml"/>
				</container>
				<container name="bm.checkout.iframe.block" htmlTag="div" htmlClass="bm-checkout-iframe-wrapper">
					<block class="Billmate\BillmateCheckout\Block\Checkout\Iframe"
						   cacheable="false" name="billmate.iframe"
						   template="bmcheckout/iframe.phtml"/>
				</container>
			</container>
		</referenceContainer>
		<move element="logo" destination="bm-cart" before="-"/>
	</body>
</page>
